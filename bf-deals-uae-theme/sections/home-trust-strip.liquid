<section class="home-trust-strip full-width" aria-label="{{ 'home.trust.aria' | t }}">
  <div class="home-trust-strip__inner">
    <ul class="home-trust-strip__list" role="list">
      <li class="home-trust-strip__item">
        <span class="home-trust-strip__icon" aria-hidden="true">
          <svg viewBox="0 0 24 24" width="20" height="20" fill="none">
            <path d="M3 7h14l3 4v6H6a3 3 0 1 1 0-2h10v-5l-1.5-2H3V7Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M6 18a2 2 0 1 0 0-4 2 2 0 0 0 0 4Z" stroke="currentColor" stroke-width="2"/>
            <path d="M18 18a2 2 0 1 0 0-4 2 2 0 0 0 0 4Z" stroke="currentColor" stroke-width="2"/>
          </svg>
        </span>
        <span class="home-trust-strip__text">{{ 'home.trust.fast_delivery_uae' | t }}</span>
      </li>
      <li class="home-trust-strip__item">
        <span class="home-trust-strip__icon" aria-hidden="true">
          <svg viewBox="0 0 24 24" width="20" height="20" fill="none">
            <path d="M21 12a9 9 0 1 1-3-6.7" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
            <path d="M21 4v6h-6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </span>
        <span class="home-trust-strip__text">{{ 'home.trust.easy_returns' | t }}</span>
      </li>
      <li class="home-trust-strip__item">
        <span class="home-trust-strip__icon" aria-hidden="true">
          <svg viewBox="0 0 24 24" width="20" height="20" fill="none">
            <path d="M7 11V8a5 5 0 0 1 10 0v3" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
            <path d="M6 11h12v10H6V11Z" stroke="currentColor" stroke-width="2" stroke-linejoin="round"/>
          </svg>
        </span>
        <span class="home-trust-strip__text">{{ 'home.trust.secure_checkout' | t }}</span>
      </li>
      <li class="home-trust-strip__item">
        <span class="home-trust-strip__icon" aria-hidden="true">
          <svg viewBox="0 0 24 24" width="20" height="20" fill="none">
            <path d="M12 21c4.4 0 8-3.6 8-8s-3.6-8-8-8-8 3.6-8 8 3.6 8 8 8Z" stroke="currentColor" stroke-width="2"/>
            <path d="M8 15s1.2-1.5 4-1.5S16 15 16 15" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
            <path d="M9 10h.01M15 10h.01" stroke="currentColor" stroke-width="3" stroke-linecap="round"/>
          </svg>
        </span>
        <span class="home-trust-strip__text">{{ 'home.trust.local_support' | t }}</span>
      </li>
    </ul>
  </div>
</section>

{% stylesheet %}
  .home-trust-strip {
    background: color-mix(in srgb, var(--color-foreground) 6%, var(--color-background));
    border-block: 1px solid color-mix(in srgb, var(--color-foreground) 10%, transparent);
  }

  .home-trust-strip__inner {
    padding: 0.9rem var(--page-margin);
  }

  .home-trust-strip__list {
    display: grid;
    gap: 0.85rem;
  }

  .home-trust-strip__item {
    display: flex;
    gap: 0.65rem;
    align-items: center;
    font-weight: 800;
  }

  .home-trust-strip__icon {
    width: 2.25rem;
    height: 2.25rem;
    display: grid;
    place-items: center;
    border-radius: 999px;
    background: color-mix(in srgb, var(--color-background) 82%, transparent);
    border: 1px solid color-mix(in srgb, var(--color-foreground) 12%, transparent);
  }

  .home-trust-strip__text {
    letter-spacing: -0.01em;
  }

  @media (min-width: 900px) {
    .home-trust-strip__list {
      grid-template-columns: repeat(4, minmax(0, 1fr));
      align-items: center;
    }
  }

  @media (max-width: 750px) {
    .home-trust-strip__inner {
      padding: 0.9rem clamp(1rem, 4vw, 1.5rem);
    }
    .home-trust-strip__list {
      grid-template-columns: repeat(2, minmax(0, 1fr));
      gap: 0.75rem;
    }
    .home-trust-strip__item {
      gap: 0.5rem;
      font-size: 0.95rem;
    }
    .home-trust-strip__icon {
      width: 2rem;
      height: 2rem;
    }
  }
{% endstylesheet %}

