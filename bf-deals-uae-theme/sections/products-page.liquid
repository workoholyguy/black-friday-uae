{% comment %}
    Products page section (used by templates/page.products.json).
                
                  This renders a product grid for a chosen collection. If none is selected,
                  it falls back to the built-in "All products" collection.
{% endcomment %}

{% liquid
  assign list_collection = section.settings.collection
  if list_collection == blank
    assign list_collection = collections['all']
  endif %}

<section class="products-page" style="
                                    --products-pad-top: {{ section.settings.padding_top }}px;
                                    --products-pad-bottom: {{ section.settings.padding_bottom }}px;
                                    --products-gap: {{ section.settings.gap }}px;
                                    --products-columns-desktop: {{ section.settings.columns_desktop }};
                                    --products-columns-mobile: {{ section.settings.columns_mobile }};
                                  ">
    <header class="products-page__header">
        <h1 class="products-page__title">
            {% if section.settings.heading != blank %}
                {{ section.settings.heading | escape }}
            {% else %}
                {{ 'products_page.title' | t }}
            {% endif %}
        </h1>
        {% if section.settings.subheading != blank %}
            <p class="products-page__subheading">{{ section.settings.subheading | escape }}</p>
        {% else %}
            <p class="products-page__subheading">{{ 'products_page.subtitle' | t }}</p>
        {% endif %}
    </header>

    {% if list_collection != blank and list_collection.products_count > 0 %}
        {% paginate list_collection.products by section.settings.products_per_page %}

            {% comment %}
                <ul style="margin-bottom: 1rem; font-size: 0.9rem; opacity: .7;">
                                                                <li>
                                                                    <strong>Debug — product types in this collection:</strong>
                                                                </li>
                                                                {% for product in list_collection.products %}
                                                                    <li>{{ product.title | escape }}
                                                                        — [{{ product.type | default: 'NO TYPE' | escape }}]</li>
                                                                {% else %}
                                                                    <li>No products found.</li>
                                                                {% endfor %}
                                                            </ul>
            {% endcomment %}

            <div class="products-page__layout" data-products-layout>
                <aside class="products-page__sidebar" aria-label="{{ 'products_page.filters.title' | t }}">
                    <div class="products-page__sidebar-inner">
                        <div class="products-page__sidebar-head">
                            <p class="products-page__sidebar-title">{{ 'products_page.filters.title' | t }}</p>
                            <div class="products-page__sidebar-actions">
                                <button class="products-page__toggle" type="button" data-filters-toggle aria-expanded="true" aria-controls="ProductsSidebarBody-{{ section.id }}" data-text-minimize="{{ 'products_page.filters.minimize' | t | escape }}" data-text-maximize="{{ 'products_page.filters.maximize' | t | escape }}">
                                    {{ 'products_page.filters.minimize' | t }}
                                </button>
                                <button class="products-page__clear" type="button" data-filters-clear>
                                    {{ 'products_page.filters.clear' | t }}
                                </button>
                            </div>
                        </div>

                        <div id="ProductsSidebarBody-{{ section.id }}" class="products-page__sidebar-body">
                            <div class="products-page__field">
                                <label class="products-page__label" for="ProductsSearch-{{ section.id }}">
                                    {{ 'products_page.filters.search' | t }}
                                </label>
                                <input id="ProductsSearch-{{ section.id }}" class="products-page__input" type="search" placeholder="{{ 'products_page.filters.search_placeholder' | t }}" data-filter-search></div>

                                {%- comment -%}
                                    Category filter based on product type
                                {%- endcomment -%}
                                <div class="products-page__group" role="group" aria-label="{{ 'products_page.filters.categories' | t }}">
                                    <p class="products-page__label products-page__label--group">
                                        {{ 'products_page.filters.categories' | t }}
                                    </p>

                                    {% assign types = '' | split: '' %}

                                    {% for product in list_collection.products %}
                                        {% if product.type != blank %}
                                            {% assign type_array = product.type | split: '||' %}
                                            {% assign types = types | concat: type_array %}
                                        {% endif %}
                                    {% endfor %}

                                    {% assign unique_types = types | uniq | sort %}

                                    {% if unique_types.size > 0 %}
                                        {% for type in unique_types %}
                                            <label class="products-page__check">
                                                <input type="checkbox" value="{{ type | escape }}" data-filter-type>
                                                    <span>{{ type | escape }}</span>
                                                </label>
                                            {% endfor %}
                                        {% else %}
                                            <p class="products-page__hint">{{ 'products_page.filters.categories_hint' | t }}</p>
                                        {% endif %}
                                    </div>

                                    <div class="products-page__group" role="group" aria-label="{{ 'products_page.filters.refine' | t }}">
                                        <p class="products-page__label products-page__label--group">
                                            {{ 'products_page.filters.refine' | t }}
                                        </p>
                                        <label class="products-page__check">
                                            <input type="checkbox" value="in_stock" data-filter-stock>
                                                <span>{{ 'products_page.filters.in_stock' | t }}</span>
                                            </label>
                                            <label class="products-page__check">
                                                <input type="checkbox" value="on_sale" data-filter-sale>
                                                    <span>{{ 'products_page.filters.on_sale' | t }}</span>
                                                </label>
                                            </div>

                                            <div class="products-page__group" role="group" aria-label="{{ 'products_page.filters.price' | t }}">
                                                <p class="products-page__label products-page__label--group">
                                                    {{ 'products_page.filters.price' | t }}
                                                </p>
                                                <div class="products-page__price-range">
                                                    <div class="products-page__field">
                                                        <label class="products-page__label" for="MinPrice-{{ section.id }}">
                                                            {{ 'products_page.filters.min_price' | t }}
                                                        </label>
                                                        <input id="MinPrice-{{ section.id }}" class="products-page__input" type="number" min="0" step="1" inputmode="numeric" data-filter-min-price></div>
                                                        <div class="products-page__field">
                                                            <label class="products-page__label" for="MaxPrice-{{ section.id }}">
                                                                {{ 'products_page.filters.max_price' | t }}
                                                            </label>
                                                            <input id="MaxPrice-{{ section.id }}" class="products-page__input" type="number" min="0" step="1" inputmode="numeric" data-filter-max-price></div>
                                                        </div>
                                                        <p class="products-page__hint">{{ 'products_page.filters.price_hint' | t }}</p>
                                                    </div>

                                                    <p class="products-page__count" aria-live="polite" data-results-count></p>
                                                </div>
                                            </div>
                                        </aside>

                                        <div class="products-page__main">
                                            <div class="products-page__grid" role="list" data-products-grid>
                                                {% for product in list_collection.products %}
                                                    {% liquid
                assign variant = product.selected_or_first_available_variant
                assign on_sale = false
                if variant.compare_at_price > variant.price
                  assign on_sale = true
                endif
                assign tags = product.tags | join: ',' %}
                                                    <div role="listitem" data-product-item data-title="{{ product.title | strip_html | escape }}" data-vendor="{{ product.vendor | escape }}" data-tags="{{ tags | escape }}" data-type="{{ product.type | escape }}" data-available="{% if product.available %}true{% else %}false{% endif %}" data-on-sale="{% if on_sale %}true{% else %}false{% endif %}" data-price-cents="{{ variant.price }}">
                                                        {% render 'product-card',
                  product: product,
                  show_vendor: section.settings.show_vendor,
                  show_price: section.settings.show_price %}
                                                    </div>
                                                {% endfor %}
                                            </div>
                                        </div>
                                    </div>

                                    <div class="products-page__pagination">
                                        {{ paginate | default_pagination }}
                                    </div>
                                {% endpaginate %}
                            {% else %}
                                <p class="products-page__empty">{{ 'products_page.empty' | t }}</p>
                            {% endif %}
                        </section>

                        {% stylesheet %}
