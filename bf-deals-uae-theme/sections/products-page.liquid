                        {% javascript %}
                        function normalizeText(value) {
                                                                                                    return (value || '').toString().toLowerCase().trim()
                                                                                                  }
                                                                                                
                                                                                                  function parseNumber(value) {
                                                                                                    if (value === null || value === undefined) return null
                                                                                                    const s = value.toString().trim()
                                                                                                    if (s === '') return null
                                                                                                    const n = Number(s)
                                                                                                    return Number.isFinite(n) ? n : null
                                                                                                  }
                                                                                                
                                                                                                  function initProductsPageFilters(sectionRoot) {
                                                                                                    const items = Array.from(sectionRoot.querySelectorAll('[data-product-item]'))
                                                                                                    if (items.length === 0) return
                                                                                                
                                                                                                    const layout = sectionRoot.querySelector('[data-products-layout]')
                                                                                                    const toggle = sectionRoot.querySelector('[data-filters-toggle]')
                                                                                                    const search = sectionRoot.querySelector('[data-filter-search]')
                                                                                                    const typeChecks = Array.from(sectionRoot.querySelectorAll('[data-filter-type]'))
                                                                                                    const tagChecks = Array.from(sectionRoot.querySelectorAll('[data-filter-tag]'))
                                                                                                    const stock = sectionRoot.querySelector('[data-filter-stock]')
                                                                                                    const sale = sectionRoot.querySelector('[data-filter-sale]')
                                                                                                    const minPrice = sectionRoot.querySelector('[data-filter-min-price]')
                                                                                                    const maxPrice = sectionRoot.querySelector('[data-filter-max-price]')
                                                                                                    const clear = sectionRoot.querySelector('[data-filters-clear]')
                                                                                                    const count = sectionRoot.querySelector('[data-results-count]')
                                                                                                
                                                                                                    const storageKey = `products_page_filters_collapsed:${sectionRoot.id || ''}`
                                                                                                
                                                                                                    function setCollapsed(isCollapsed) {
                                                                                                      sectionRoot.classList.toggle('products-page--filters-collapsed', isCollapsed)
                                                                                                
                                                                                                      if (toggle) {
                                                                                                        toggle.setAttribute('aria-expanded', (!isCollapsed).toString())
                                                                                                        const textMin = toggle.dataset.textMinimize || 'Minimize'
                                                                                                        const textMax = toggle.dataset.textMaximize || 'Maximize'
                                                                                                        toggle.textContent = isCollapsed ? textMax : textMin
                                                                                                      }
                                                                                                
                                                                                                      try {
                                                                                                        localStorage.setItem(storageKey, isCollapsed ? '1' : '0')
                                                                                                      } catch (e) {}
                                                                                                    }
                                                                                                
                                                                                                    function getCollapsedFromStorage() {
                                                                                                      try {
                                                                                                        return localStorage.getItem(storageKey) === '1'
                                                                                                      } catch (e) {
                                                                                                        return false
                                                                                                      }
                                                                                                    }
                                                                                                
                                                                                                    function getSelectedTypes() {
                                                                                                      return typeChecks.filter((c) => c.checked).map((c) => c.value)
                                                                                                    }
                                                                                                
                                                                                                    function getSelectedTags() {
                                                                                                      return tagChecks.filter((c) => c.checked).map((c) => c.value)
                                                                                                    }
                                                                                                
                                                                                                    function matchesTypes(item, selectedTypes) {
                                                                                                      if (selectedTypes.length === 0) return true
                                                                                                      const type = normalizeText(item.dataset.type || '')
                                                                                                      const selected = selectedTypes.map((t) => normalizeText(t))
                                                                                                      return selected.includes(type)
                                                                                                    }
                                                                                                
                                                                                                    function matchesTags(item, selectedTags) {
                                                                                                      if (selectedTags.length === 0) return true
                                                                                                      const tagsRaw = item.dataset.tags || ''
                                                                                                      const tagList = tagsRaw
                                                                                                        .split(',')
                                                                                                        .map((t) => normalizeText(t))
                                                                                                        .filter(Boolean)
                                                                                                
                                                                                                      const selected = selectedTags.map((t) => normalizeText(t))
                                                                                                      for (const t of selected) {
                                                                                                        if (tagList.includes(t)) return true
                                                                                                      }
                                                                                                      return false
                                                                                                    }
                                                                                                
                                                                                                    function applyFilters() {
                                                                                                      const q = normalizeText(search?.value)
                                                                                                      const selectedTypes = getSelectedTypes()
                                                                                                      const selectedTags = getSelectedTags()
                                                                                                      const onlyInStock = !!stock?.checked
                                                                                                      const onlyOnSale = !!sale?.checked
                                                                                                
                                                                                                      const min = parseNumber(minPrice?.value)
                                                                                                      const max = parseNumber(maxPrice?.value)
                                                                                                
                                                                                                      let visible = 0
                                                                                                      for (const item of items) {
                                                                                                        const title = normalizeText(item.dataset.title)
                                                                                                        const vendor = normalizeText(item.dataset.vendor)
                                                                                                        const available = item.dataset.available === 'true'
                                                                                                        const onSale = item.dataset.onSale === 'true'
                                                                                                        const priceCents = parseNumber(item.dataset.priceCents)
                                                                                                
                                                                                                        let ok = true
                                                                                                
                                                                                                        if (q) {
                                                                                                          if (!title.includes(q) && !vendor.includes(q)) ok = false
                                                                                                        }
                                                                                                
                                                                                                        if (ok && !matchesTypes(item, selectedTypes)) ok = false
                                                                                                        if (ok && !matchesTags(item, selectedTags)) ok = false
                                                                                                        if (ok && onlyInStock && !available) ok = false
                                                                                                        if (ok && onlyOnSale && !onSale) ok = false
                                                                                                
                                                                                                        if (ok && priceCents !== null) {
                                                                                                          if (min !== null && priceCents < min * 100) ok = false
                                                                                                          if (max !== null && priceCents > max * 100) ok = false
                                                                                                        }
                                                                                                
                                                                                                        item.style.display = ok ? '' : 'none'
                                                                                                        if (ok) visible += 1
                                                                                                      }
                                                                                                
                                                                                                      if (count) {
                                                                                                        count.textContent = `${visible} / ${items.length}`
                                                                                                      }
                                                                                                    }
                                                                                                
                                                                                                    function clearFilters() {
                                                                                                      if (search) search.value = ''
                                                                                                      for (const c of typeChecks) c.checked = false
                                                                                                      for (const c of tagChecks) c.checked = false
                                                                                                      if (stock) stock.checked = false
                                                                                                      if (sale) sale.checked = false
                                                                                                      if (minPrice) minPrice.value = ''
                                                                                                      if (maxPrice) maxPrice.value = ''
                                                                                                      applyFilters()
                                                                                                    }
                                                                                                
                                                                                                    if (toggle) {
                                                                                                      toggle.addEventListener('click', () => {
                                                                                                        const next = !sectionRoot.classList.contains('products-page--filters-collapsed')
                                                                                                        setCollapsed(next)
                                                                                                      })
                                                                                                    }
                                                                                                
                                                                                                    const handlers = [search, stock, sale, minPrice, maxPrice, clear, ...typeChecks, ...tagChecks].filter(Boolean)
                                                                                                    for (const el of handlers) {
                                                                                                      const evt = el === clear ? 'click' : 'input'
                                                                                                      el.addEventListener(evt, () => {
                                                                                                        if (el === clear) clearFilters()
                                                                                                        else applyFilters()
                                                                                                      })
                                                                                                      if (el.tagName === 'INPUT' && el.type === 'checkbox') {
                                                                                                        el.addEventListener('change', applyFilters)
                                                                                                      }
                                                                                                    }
                                                                                                
                                                                                                    setCollapsed(getCollapsedFromStorage())
                                                                                                    applyFilters()
                                                                                                  }
                                                                                                
                                                                                                  function initAllProductsPages() {
                                                                                                    document.querySelectorAll('.products-page').forEach((root) => initProductsPageFilters(root))
                                                                                                  }
                                                                                                
                                                                                                  if (document.readyState === 'loading') {
                                                                                                    document.addEventListener('DOMContentLoaded', initAllProductsPages)
                                                                                                  } else {
                                                                                                    initAllProductsPages()
                                                                                                  }
                        {% endjavascript %}

                        {% schema %}
                        {
                                                                                                  "name": "Products page",
                                                                                                  "settings": [
                                                                                                    {
                                                                                                      "type": "text",
                                                                                                      "id": "heading",
                                                                                                      "label": "Heading",
                                                                                                      "default": "Products"
                                                                                                    },
                                                                                                    {
                                                                                                      "type": "text",
                                                                                                      "id": "subheading",
                                                                                                      "label": "Subheading",
                                                                                                      "default": "Browse our collection and find the best deals available right now."
                                                                                                    },
                                                                                                    {
                                                                                                      "type": "collection",
                                                                                                      "id": "collection",
                                                                                                      "label": "Collection (default: all products)"
                                                                                                    },
                                                                                                    {
                                                                                                      "type": "range",
                                                                                                      "id": "products_per_page",
                                                                                                      "label": "Products per page",
                                                                                                      "min": 8,
                                                                                                      "max": 48,
                                                                                                      "step": 4,
                                                                                                      "default": 24
                                                                                                    },
                                                                                                    {
                                                                                                      "type": "range",
                                                                                                      "id": "gap",
                                                                                                      "label": "Grid gap",
                                                                                                      "min": 8,
                                                                                                      "max": 40,
