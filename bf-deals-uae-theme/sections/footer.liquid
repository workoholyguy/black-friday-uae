<footer class="site-footer full-width">
  <div class="footer__top">
    <div class="footer__brand">
      <a class="footer__home" href="{{ routes.root_url }}">{{ shop.name }}</a>
      <p class="footer__tagline">Black Friday Deals Â· Amazon returns in UAE</p>
    </div>

    {% if section.settings.show_contact %}
      <div class="footer__contact">
        {% if section.settings.contact_heading != blank %}
          <h4 class="footer__contact-heading">{{ section.settings.contact_heading }}</h4>
        {% endif %}
        <address class="footer__address">
          {% if section.settings.contact_address != blank %}
            <p class="footer__address-line footer__address-line--address">
              <span class="footer__address-icon" aria-hidden="true">
                <svg viewBox="0 0 24 24" role="presentation" focusable="false">
                  <path d="M12 2c-3.86 0-7 3.14-7 7 0 5.27 6.25 12.24 6.52 12.53.26.29.7.29.96 0C12.75 21.24 19 14.27 19 9c0-3.86-3.14-7-7-7Zm0 17.18C10.48 17.3 7 12.7 7 9c0-2.76 2.24-5 5-5s5 2.24 5 5c0 3.7-3.48 8.3-5 10.18ZM12 6.5A2.5 2.5 0 1 0 12 11.5 2.5 2.5 0 0 0 12 6.5Z"/>
                </svg>
              </span>
              <a
                class="footer__address-text footer__address-link footer__address-link--map"
                href="https://www.google.com/maps/place/Black+Friday+deals/@25.3851875,55.4617376,765m/data=!3m2!1e3!4b1!4m6!3m5!1s0x3e5f5900797a60b5:0xc464ded4901a91f3!8m2!3d25.3851875!4d55.4643125!16s%2Fg%2F11lypqp1zj?entry=ttu&amp;g_ep=EgoyMDI1MTIwOS4wIKXMDSoASAFQAw%3D%3D"
                target="_blank"
                rel="noopener"
              >
                {{ section.settings.contact_address | newline_to_br }}
              </a>
            </p>
          {% endif %}
          {% if section.settings.contact_phone != blank %}
            <p class="footer__address-line footer__address-line--phone">
              <span class="footer__address-icon" aria-hidden="true">
                <svg viewBox="0 0 24 24" role="presentation" focusable="false">
                  <path d="M6.62 10.79a15.05 15.05 0 0 0 6.59 6.59l2.2-2.2a1 1 0 0 1 1-.24c1.12.37 2.33.57 3.59.57a1 1 0 0 1 1 1V20a1 1 0 0 1-1 1C10.07 21 3 13.93 3 5a1 1 0 0 1 1-1h3.5a1 1 0 0 1 1 1c0 1.26.2 2.47.57 3.59a1 1 0 0 1-.24 1l-2.21 2.2Z"/>
                </svg>
              </span>
              <a href="tel:{{ section.settings.contact_phone | replace: ' ', '' }}">{{ section.settings.contact_phone }}</a>
            </p>
          {% endif %}
          {% if section.settings.contact_email != blank %}
            <p class="footer__address-line footer__address-line--email">
              <span class="footer__address-icon" aria-hidden="true">
                <svg viewBox="0 0 24 24" role="presentation" focusable="false">
                  <path d="M20 4H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V6a2 2 0 0 0-2-2Zm0 4-8 5L4 8V6l8 5 8-5v2Z"/>
                </svg>
              </span>
              <a href="mailto:{{ section.settings.contact_email }}">{{ section.settings.contact_email }}</a>
            </p>
          {% endif %}
          {% if section.settings.contact_hours != blank %}
            <p class="footer__address-line footer__address-line--hours">
              <span class="footer__address-icon" aria-hidden="true">
                <svg viewBox="0 0 24 24" role="presentation" focusable="false">
                  <path d="M12 2a10 10 0 1 0 .001 20.001A10 10 0 0 0 12 2Zm1 11h5v-2h-4V6h-2v7Z"/>
                </svg>
              </span>
              <span class="footer__address-text">{{ section.settings.contact_hours }}</span>
            </p>
          {% endif %}
        </address>
      </div>
    {% endif %}

    <div class="footer__utility">
      <div class="footer__social">
        {% if section.settings.facebook_url != blank %}
          <a href="{{ section.settings.facebook_url }}" target="_blank" rel="noopener" aria-label="Facebook">
            {{ 'icon-facebook.svg' | inline_asset_content }}
          </a>
        {% endif %}
        {% if section.settings.instagram_url != blank %}
          <a href="{{ section.settings.instagram_url }}" target="_blank" rel="noopener" aria-label="Instagram">
            {{ 'icon-instagram.svg' | inline_asset_content }}
          </a>
        {% endif %}
        {% if section.settings.tiktok_url != blank %}
          <a href="{{ section.settings.tiktok_url }}" target="_blank" rel="noopener" aria-label="TikTok">
            {{ 'icon-tiktok.svg' | inline_asset_content }}
          </a>
        {% endif %}
      </div>
      {% if section.settings.show_utility_links %}
        <div class="footer__links">
          {% if section.settings.utility_heading != blank %}
            <h4 class="footer__links-heading">{{ section.settings.utility_heading }}</h4>
          {% endif %}
          <ul class="footer__links-list">
            <li><a href="{{ routes.search_url }}">Search</a></li>
            {% if shop.privacy_policy %}
              <li><a href="{{ shop.privacy_policy.url }}">Privacy Policy</a></li>
            {% elsif section.settings.privacy_policy_url != blank %}
              <li><a href="{{ section.settings.privacy_policy_url }}">Privacy Policy</a></li>
            {% endif %}
            {% if shop.refund_policy %}
              <li><a href="{{ shop.refund_policy.url }}">Refund Policy</a></li>
            {% elsif section.settings.refund_policy_url != blank %}
              <li><a href="{{ section.settings.refund_policy_url }}">Refund Policy</a></li>
            {% endif %}
            {% if shop.shipping_policy %}<li><a href="{{ shop.shipping_policy.url }}">Shipping Policy</a></li>{% endif %}
            {% unless shop.shipping_policy %}
              {% if section.settings.shipping_policy_url != blank %}
                <li><a href="{{ section.settings.shipping_policy_url }}">Shipping Policy</a></li>
              {% endif %}
            {% endunless %}
            {% if shop.terms_of_service %}
              <li><a href="{{ shop.terms_of_service.url }}">{{ 'footer.terms_of_service' | t }}</a></li>
            {% elsif section.settings.terms_of_service_url != blank %}
              <li><a href="{{ section.settings.terms_of_service_url }}">{{ 'footer.terms_of_service' | t }}</a></li>
            {% endif %}
          </ul>
        </div>
      {% endif %}
    </div>
  </div>

  <div class="footer__bottom">
    <div class="footer__copyright">
      &copy; {{ 'now' | date: '%Y' }} {{ shop.name | link_to: routes.root_url }}, {{ powered_by_link }}
    </div>
    <div class="footer__payment">
      {% if section.settings.show_payment_icons %}
        {% for type in shop.enabled_payment_types %}
          {{ type | payment_type_svg_tag }}
        {% endfor %}
      {% endif %}
    </div>
  </div>
</footer>

{% stylesheet %}
  .site-footer {
    background: var(--color-footer-bg);
    color: var(--color-accent);
    margin-top: 2rem;
    padding-block: 2rem;
    border-block-start: 2px solid var(--color-primary);
  }
  .site-footer a {
    color: var(--color-accent);
    text-decoration: none;
  }
  .footer__top {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    align-items: center;
    gap: 1rem;
    padding-inline: var(--page-margin);
    margin-bottom: 1rem;
  }
  .footer__brand {
    justify-self: start;
  }
  .footer__tagline {
    font-size: 0.875rem;
    opacity: 0.85;
  }
  .footer__contact {
    justify-self: center;
    margin-top: 0;
    display: grid;
    gap: .25rem;
  }
  .footer__contact-heading {
    font-size: 0.95rem;
    margin: 0;
  }
  .footer__address {
    font-style: normal;
    font-size: 0.9rem;
    display: grid;
    gap: .15rem;
  }
  .footer__address-line {
    display: flex;
    align-items: flex-start;
    gap: 0.5rem;
  }
  .footer__address-icon {
    flex: 0 0 auto;
    width: 1rem;
    height: 1rem;
    opacity: 0.9;
    margin-top: 0.15rem;
  }
  .footer__address-icon svg {
    width: 100%;
    height: 100%;
    fill: currentColor;
  }
  .footer__address-text {
    min-width: 0;
  }
  .footer__address-line a {
    color: var(--color-accent);
    text-decoration: none;
  }
  .footer__address-line a:hover {
    color: var(--color-link);
  }
  .footer__utility { justify-self: end; display: grid; gap: .5rem; }
  .footer__social { display: flex; gap: 0.75rem; }
  .footer__social svg {
    width: 1.25rem;
    height: 1.25rem;
    fill: currentColor;
  }
  .footer__links-heading { font-size: 0.95rem; margin: 0; }
  .footer__links-list { list-style: none; margin: 0; padding: 0; display: grid; gap: .2rem; }
  .footer__links-list a:hover { color: var(--color-link); }
  .footer__bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
    padding-inline: var(--page-margin);
  }
  .footer__payment {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }
{% endstylesheet %}

